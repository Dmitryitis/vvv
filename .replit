modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend App"

[[workflows.workflow]]
name = "Backend Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && npm install && npm start"
waitForPort = 8000

[[workflows.workflow]]
name = "Frontend App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx vite --port 5000 --host 0.0.0.0"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "cd server && npm install && npm start"]

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8000
externalPort = 80
