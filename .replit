modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend Server"

[[workflows.workflow]]
name = "Backend Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && npm install && npm install @nestjs/core @nestjs/common @nestjs/platform-express class-validator class-transformer reflect-metadata rxjs && npx ts-node main.ts"
waitForPort = 8000

[deployment]
run = ["sh", "-c", "cd server && npm install && npm install @nestjs/core @nestjs/common @nestjs/platform-express class-validator class-transformer reflect-metadata rxjs && npx ts-node main.ts"]
